<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/almostblack"
    android:layout_height="match_parent"
    tools:context=".SeatSelection">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/titleseats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/musatrd"
            android:text="@string/movies"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/musatrd"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="33dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Your name..."
                android:textColorHint="@color/grisclaro"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metodo de pago"
            android:textColor="@color/white"/>
        <Spinner
            android:id="@+id/payMethod"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:background="@color/babymustard"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/row1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margginTop"
        android:paddingHorizontal="@dimen/hpadding"
        >
        
        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="1"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="2"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="3"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="4"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="5"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>
        
    </RadioGroup>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/row2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margginTop"
        android:paddingHorizontal="@dimen/hpadding"
        >

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="6"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="7"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="8"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="9"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="10"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

    </RadioGroup>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/row3"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margginTop"
        android:paddingHorizontal="@dimen/hpadding"
        >

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="11"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="12"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="13"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="14"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="15"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

    </RadioGroup>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/row4"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margginTop"
        android:paddingHorizontal="@dimen/hpadding"
        >

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="16"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="17"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="18"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="19"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="@dimen/radioButton"
            android:layout_height="@dimen/radioButton"
            android:text="20"
            android:layout_marginHorizontal="@dimen/hradioButtonMarggin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selected"
            android:textSize="@dimen/radioTextSize"
            android:textStyle="bold"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/grisclaro"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:text="Screen"
        android:textSize="23sp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/symbols"
            android:layout_height="@dimen/symbols"
            android:src="@drawable/radio_normal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avalible"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/symbols"
            android:layout_height="@dimen/symbols"
            android:src="@drawable/radio_disable"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Avalible"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="@dimen/symbols"
            android:layout_height="@dimen/symbols"
            android:src="@drawable/radio_select"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Selection"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:text="Confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="70dp"
        android:id="@+id/confirm"/>

</LinearLayout>